class Solution {
public:
    bool sumOfNumberAndReverse(int num) 
    {
       for(int i=num; i>=0; i--)
       {
           int n = i, rev=0;
           while(n>0)
           {
               rev = rev*10 + (n%10);
               n /= 10;
           }

           if(i+rev == num)
               return true;
       } 
       return false;
    }
};
