class Solution {
public:
    int pivotInteger(int n) 
    {
        int totalSum = 0;
        for(int i=1; i<=n; i++)
        {
            totalSum += i;
        }
        int leftSum = 0;

        for(int i=n; i>0; i--)
        {
            totalSum -= i;
            if(totalSum == leftSum)
                return i;
            leftSum += i;
        }

        return -1;
    }
};
